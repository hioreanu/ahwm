# $Id$
SHELL=/bin/sh

CC=@CC@
LIBS=@XLIBS@
CFLAGS=@CFLAGS@@X_CFLAGS@
LDFLAGS=@LDFLAGS@@X_LIBS@

#CFLAGS=-g -Wall -DSHAPE -DDEBUG=1 -I/usr/X11R6/include -L/usr/X11R6/lib

OBJS=ahwm.@OBJEXT@ client.@OBJEXT@ event.@OBJEXT@ focus.@OBJEXT@ workspace.@OBJEXT@ keyboard-mouse.@OBJEXT@ xev.@OBJEXT@ cursor.@OBJEXT@ move-resize.@OBJEXT@ kill.@OBJEXT@ malloc.@OBJEXT@ icccm.@OBJEXT@ colormap.@OBJEXT@ ewmh.@OBJEXT@ debug.@OBJEXT@ place.@OBJEXT@ stacking.@OBJEXT@ parser.@OBJEXT@ lexer.@OBJEXT@ prefs.@OBJEXT@ compat.@OBJEXT@ paint.@OBJEXT@ mwm.@OBJEXT@ timer.@OBJEXT@

all: ahwm

ahwm: $(OBJS)
	$(CC) $(CFLAGS) $(LDFLAGS) $(OBJS) -o $@@EXEEXT@ $(LIBS)

parser.h: parser.c
parser.c: parser.y
	bison -d -o parser.c parser.y
lexer.c: lexer.l
	flex -i -olexer.c lexer.l

# this is intentional - 'make install' should always ignore the umask
install: ahwm
	if [ ! -d @prefix@@bindir@ ] ; then mkdir -m 755 -p @prefix@@bindir@ ; fi
	cp ./ahwm @prefix@@bindir@
	chmod 755 @prefix@@bindir@/ahwm
	if [ ! -d @prefix@@mandir@/man5 ] ; then mkdir -m 755 -p @prefix@@mandir@/man5 ; fi
	cp ./ahwmrc.5 @prefix@@mandir@/man5
	chmod 644 @prefix@@mandir@/man5/ahwmrc.5
	ln -s @prefix@@mandir@/man5/ahwmrc.5 @prefix@@mandir@/man5/ahwm.5

.SUFFIXES:
.SUFFIXES: .c .@OBJEXT@
.c.@OBJEXT@:
	$(CC) $(CFLAGS) -c $<

dep:
	@-makedepend -Y *.c *.h > /dev/null 2>&1
	@-etags *.c *.h > /dev/null 2>&1
depend: dep
tags: dep

wordcount:
	@cat *.c *.h | fgrep -v '#include' | cpp -E - | egrep -v '^[ \t]*$$' | wc -l
wc: wordcount

clean:
	@rm -f *.@OBJEXT@ *~ *core ahwm # TAGS

